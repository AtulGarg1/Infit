<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recview_qna_parent_item_layout"
    android:layout_height="wrap_content"
    android:layout_width="333dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:backgroundTint="#EFF8FF"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recview_qna_parent_item_qno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q1."
                    android:textSize="13sp"
                    android:fontFamily="@font/nats_font"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/recview_qna_parent_item_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:textSize="13sp"
                    android:fontFamily="@font/nats_font"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/recview_qna_parent_item_arrow"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="14dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/recview_qna_parent_answer"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:text="@string/answer"
                android:textSize="11sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#000000"
                android:lineHeight="11dp"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="333dp"
        android:layout_height="13dp"/>
</LinearLayout>
