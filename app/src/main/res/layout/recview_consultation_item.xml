<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="143dp"
        android:layout_height="178dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFF8FF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp">
                <ImageView
                    android:id="@+id/recview_consultation_profile"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/dashboard_dummy_consultation_profile"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="13dp">
                    <TextView
                        android:id="@+id/recview_consultation_time"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="5:00 PM"
                        android:textSize="12sp"
                        android:fontFamily="@font/nats_font"
                        android:textColor="#4B9AFB"/>
                    <TextView
                        android:id="@+id/recview_consultation_date"
                        android:layout_width="45dp"
                        android:layout_height="20dp"
                        android:text="Dec 07"
                        android:textSize="12sp"
                        android:fontFamily="@font/nats_font"
                        android:textColor="#959595"
                        android:layout_marginTop="-10dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/recview_consultation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micheal\nSimpson"
                android:textSize="13sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#000000"
                android:lineHeight="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="8dp"/>
            <ImageButton
                android:id="@+id/recview_consultation_btn"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:background="@drawable/recview_consultation_item_btn"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>