<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="231dp"
    android:layout_height="205dp"
    android:orientation="vertical">

    <View
        android:layout_width="231dp"
        android:layout_height="205dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/customer_reviews_bg"
        />
    <TextView
        android:layout_width="85dp"
        android:layout_height="23dp"
        android:layout_marginTop="-196dp"
        android:text="@string/customer_reviews"
        android:fontFamily="@font/nats_font"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>
    <RatingBar
        android:id="@+id/customer_reviews_rating"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center_horizontal"
        android:progressDrawable="@drawable/custom_ratingbar"
        android:isIndicator="true"
        android:numStars="5"
        android:scaleX="0.4"
        android:scaleY="0.4"/>
    <LinearLayout
        android:layout_width="201dp"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp">
        <ImageView
            android:id="@+id/customer_reviews_profile"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@drawable/customer_reviews_dummy_profile"
            android:layout_marginStart="0dp"/>
        <TextView
            android:id="@+id/customer_reviews_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martha Finch"
            android:fontFamily="@font/nats_font"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-7dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/customer_reviews_star"
            android:layout_marginEnd="3dp"/>
        <TextView
            android:id="@+id/customer_reviews_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="4.8"
            android:textColor="#676767"
            android:textSize="8dp"
            android:layout_marginTop="-8dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/customer_reviews_description"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/lorem_ipsum"
        android:fontFamily="@font/nats_font"
        android:textSize="10sp"
        android:textColor="#676767"
        android:lineHeight="10dp"
        android:lines="3"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/customer_reviews_view_more"
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/view_more"
        android:fontFamily="@font/nats_font"
        android:textSize="12sp"
        android:textColor="#4B9AFB"/>
</LinearLayout>