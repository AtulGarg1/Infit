<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/recview_ingredients_image"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:background="@drawable/recview_ingredients_image"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/recview_ingredients_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All purpose Flour"
        android:textSize="14sp"
        android:fontFamily="@font/nats_font"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="6dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/recview_ingredients_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup"
        android:textSize="14sp"
        android:fontFamily="@font/nats_font"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-6dp"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:background="@drawable/recview_ingredients_tick"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-6dp"
        android:layout_marginHorizontal="14dp"/>
</LinearLayout>