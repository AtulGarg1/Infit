<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="95dp"
        android:layout_height="120dp"
        android:layout_marginEnd="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFF8FF"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/recview_consultation_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dashboard_dummy_consultation_profile"/>
            <TextView
                android:id="@+id/recview_consultation_time"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="5:00 PM"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#4B9AFB"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="50dp"/>
            <TextView
                android:id="@+id/recview_consultation_date"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="Dec 07"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#959595"
                android:layout_marginTop="-11dp"
                android:layout_marginStart="56dp"/>
            <TextView
                android:id="@+id/recview_consultation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micheal\nSimpson"
                android:textSize="13sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#000000"
                android:lineHeight="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="5dp"/>
            <ImageButton
                android:id="@+id/recview_consultation_btn"
                android:layout_width="68dp"
                android:layout_height="21dp"
                android:background="@drawable/recview_consultation_item_btn"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>