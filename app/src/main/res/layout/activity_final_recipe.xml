<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".FinalRecipe">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/final_recipe_dummy_pic"/>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/final_recipe_rating_bg"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/final_recipe_rating_star"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textSize="14sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#797979"
                android:layout_marginTop="-5dp"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="@drawable/final_recipe_time_bg"
            android:layout_marginStart="5dp"
            android:layout_marginTop="208dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/final_recipe_time_vector"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 min"
                android:textSize="14sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#A3A1A1"
                android:layout_marginTop="-3.5dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="298"
                android:fontFamily="@font/nats_font"
                android:textColor="#9C5EF4"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/calories"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#858383"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="4g"
                android:fontFamily="@font/nats_font"
                android:textColor="#9C5EF4"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/fats"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#858383"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="10g"
                android:fontFamily="@font/nats_font"
                android:textColor="#9C5EF4"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/protein"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#858383"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="54"
                android:fontFamily="@font/nats_font"
                android:textColor="#9C5EF4"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/carbs"
                android:textSize="12sp"
                android:fontFamily="@font/nats_font"
                android:textColor="#858383"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:background="@drawable/final_recipe_tab_layout_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/final_recipe_tab_layout"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-43dp"
        android:background="@android:color/transparent"
        app:tabBackground="@drawable/final_recipe_tab_layout_bg_selector"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#000000"
        app:tabTextAppearance="@style/final_recipe_tab_layout_text"
        app:tabRippleColor="@null"
        app:tabIndicatorHeight="0dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/final_recipe_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>
</LinearLayout>