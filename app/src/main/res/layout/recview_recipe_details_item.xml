<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/recview_final_recipe_bullet_point"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"/>
    <TextView
        android:id="@+id/recview_recipe_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="11dp"
        android:text="In a large bowl, mix all-purpose flour, whole
wheat flour, salt, baking powder and sugar."
        android:textSize="13sp"
        android:fontFamily="@font/nats_font"
        android:textColor="#000000"
        android:lineHeight="10dp"/>
</LinearLayout>