<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/recview_referral_code_item_bg"
    android:layout_marginHorizontal="13dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="10dp">
        <ImageView
            android:id="@+id/recview_referral_code_profile"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_dummy_profile"/>
        <TextView
            android:id="@+id/recview_referral_code_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ronald  Richards"
            android:fontFamily="@font/nats_font"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/recview_referral_code_menu"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/recview_referral_code_item_menu_btn"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:scaleY="0.5"
            android:scaleX="0.5"/>
    </LinearLayout>
    <TextView
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="Referral code"
        android:fontFamily="@font/nats_font"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/recview_referral_code_code"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:background="@drawable/recview_referral_code_item_code_bg"
        android:text="36gh366ffjg"
        android:fontFamily="@font/nats_font"
        android:textSize="14sp"
        android:textColor="#7862FB"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"/>
</LinearLayout>